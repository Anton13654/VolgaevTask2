<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mail_plainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="введите @mail"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/button_mail"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:text="Отправить письмо"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mail_plainText"
        app:layout_constraintStart_toStartOf="@+id/mail_plainText"
        app:layout_constraintTop_toBottomOf="@+id/mail_plainText"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/browser_plainText"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="Введите ссылку"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mail_plainText"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/mail_plainText"
        app:layout_constraintTop_toBottomOf="@+id/button_mail"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/browser_button"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:text="Открыть в браузере"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/browser_plainText"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/browser_plainText"
        app:layout_constraintTop_toBottomOf="@+id/browser_plainText"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/call_plainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Введите номер"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browser_button"
        app:layout_constraintVertical_bias="0.13999999" />

    <Button
        android:id="@+id/call_button"
        android:layout_width="192dp"
        android:layout_height="52dp"
        android:text="Позвонить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/call_plainText"
        app:layout_constraintStart_toStartOf="@+id/call_plainText"
        app:layout_constraintTop_toBottomOf="@+id/call_plainText"
        app:layout_constraintVertical_bias="0.110000014" />

    <EditText
        android:id="@+id/map_plainTextFirst"
        android:layout_width="117dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Широта"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/map_plainTextSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_button"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/map_plainTextSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Долгота"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:text="Открыть карту"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/call_button"
        app:layout_constraintStart_toStartOf="@+id/call_button"
        app:layout_constraintTop_toBottomOf="@+id/map_plainTextSecond" />
</androidx.constraintlayout.widget.ConstraintLayout>